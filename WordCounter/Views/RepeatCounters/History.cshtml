@{
    Layout = "_Layout";
    ViewData["Title"] = "History";
}
<h1>history</h1>

@if (Model.Count == 0)
{
    <h5>search list empty...</h5>
}
else
{
    <div class="results">
    @foreach (var search in Model)
    {
        <h4><a href="/repeatcounters/@search.GetId()"> <span class="search-highlight">search #@search.GetId()</span> | <span class="highlight">target word: @search.GetTargetWord()</span></a></h4>
        <form action="/repeatcounters/@search.GetId()" method="post">
            <button type="submit" name="clear-one" class="btn btn-danger btn-xs">delete search #@search.GetId()</button>
        </form>
    }
    </div>
    <form action='/repeatcounters' method="post">
        <button type="submit" name="clear-all" class="clear-all btn btn-danger btn-lg">clear all items</button>
    </form>

}
    <div class="nav-buttons">
        <a href="/repeatcounters"><button class="btn btn-default btn-lg">home</button></a>
        <a href="/repeatcounters/history"><button class="btn btn-info btn-lg">history</button></a>
        <a href="/repeatcounters/new"><button class="btn btn-warning btn-lg">search</button></a>
    </div>



